// Swap 1000 GRT for 125.018572 USDC in 1Inch

uint256 constant GRT_USDC_BLOCK = 15237542;
uint256 constant RECEIVER_OFFSET = 208;
// receiver is 0x1111111111111111111111111111111111111111
bytes constant GRT_USDC_PAYLOAD =
    hex"";

bytes constant GRT_USDC_V2_PATH =
    hex"";
bytes constant GRT_USDC_V3_PATH =
    hex"a0b86991c6218b36c1d19d4a2e9eb0ce3606eb48000bb8c944e90c64b2c07662a292be6244bdf05cda44a7";

function GRT_USDC_injectReceiver(address receiver) pure returns (bytes memory payload) {
    payload = GRT_USDC_PAYLOAD;
    assembly {
        mstore(0, receiver)
        mcopy(add(add(payload, 32), RECEIVER_OFFSET), 12, 20)
    }
}

